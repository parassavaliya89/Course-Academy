    <div class="row courses">


        <div class="col-md-2 sbox">
            <form action="/select" method="POST">
                <div class="sheading">Select Category :</div>
                <div><button name="sbtn" value="Development" class="selectbtn "
                        onclick="form.submit.this()">Development</button></div>
                <div><button name="sbtn" value="Business" class="selectbtn  "
                        onclick="form.submit.this()">Business</button></div>
                <div><button name="sbtn" value="Finance and Accounting" class="selectbtn "
                        onclick="form.submit.this()">Finance and Accounting</button></div>
                <div><button name="sbtn" value="IT and Software" class="selectbtn " onclick="form.submit.this()">IT
                        and Software</button></div>
                <div><button name="sbtn" value="Office Productivity" class="selectbtn  "
                        onclick="form.submit.this()">Office Productivity</button></div>
                <div><button name="sbtn" value="Design" class="selectbtn " onclick="form.submit.this()">Design</button>
                </div>
                <div><button name="sbtn" value="Marketing" class="selectbtn "
                        onclick="form.submit.this()">Marketing</button></div>
                <div><button name="sbtn" value="Lifestyle" class="selectbtn "
                        onclick="form.submit.this()">Lifestyle</button></div>
                <div><button name="sbtn" value="Photography" class="selectbtn "
                        onclick="form.submit.this()">Photography</button></div>
                <div><button name="sbtn" value="Music" class="selectbtn " onclick="form.submit.this()">Music</button>
                </div>
                <div><button name="sbtn" value="Operating System" class="selectbtn "
                        onclick="form.submit.this()">Operating System</button></div>
                <div><button name="sbtn" value="Programming Language" class="selectbtn "
                        onclick="form.submit.this()">Programming Language</button></div>

            </form>
        </div>


        <%for(let i=0; i<(allcourse.length) ;i++){ %>

            <div class="course1 col-lg-2 col-md-4 col-sm-6 ">
                <form action="/viewcourse" method="POST">
                    <video class="img1" autoplay muted>
                        <source src="./uploads/<%=allcourse[i].titleimage%>" type="video/mp4" class="">
                    </video>
                    <h5>
                        <%=allcourse[i].coursetitle%>
                    </h5>
                    <div>
                        <%=allcourse[i].courseauthor%>
                    </div>
                    <div class="ruppess">
                        <%=allcourse[i].courseprice%>$
                    </div>
                    <div>
                        <%var n=allcourse[i].finalrating%>

                            <%var a=parseInt(allcourse[i].finalrating)%>
                                <%for(let i=0;i<a;i++){%>
                                    <i class="fas fa-star star"></i>
                                    <%}%>

                                        <%var b=n-a%>
                                            <%if(b>0){%>
                                                <i class="fas fa-star-half-alt star"></i>
                                                <%}%>
                                                    <%var c=5-n%>

                                                        <%for(let i=0;i<parseInt(c);i++){%>
                                                            <i class="far fa-star star"></i>
                                                            <%}%>
                                                            <%if(!allcourse[i].finalrating){%>                                                          
                                                                <i class="far fa-star star"></i>
                                                                <i class="noreview cdetails">No Review Yet</i>
                                                            <%}%>
                    </div>
                    <div class="view">
                        <button class="btn btn-sm btn-primary btn-block" value="<%=allcourse[i]._id%>" name="button"
                            onclick="this.form.submit()">View Course</button>
                    </div>
                </form>
            </div>

            <%}%>



    </div>




